<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!--定义日志文件的存储地址 勿在 LogBack 的配置中使用相对路径-->
    <property name="LOG_HOME" value="./logs"></property>
    <property name="PROJECT_NAME" value="DingService"></property>
    <!-- 控制台输出 -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%4.10p] [%4.25t] -> %msg &lt;- [%C:%M-%F:%L]%n</pattern>
        </encoder>
    </appender>
    <!-- 按照每天生成日志文件 -->
    <appender name="DEBUG_DAILY"  class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!--日志文件输出的文件名-->
            <FileNamePattern>${LOG_HOME}/${PROJECT_NAME}-debug-%d{yyyy-MM-dd}.log</FileNamePattern>
            <!--日志文件保留天数-->
            <MaxHistory>300</MaxHistory>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%4.10p] [%4.25t] -> %msg &lt;- [%C:%M-%F:%L]%n</pattern>
        </encoder>
        <!--日志文件最大的大小-->
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <MaxFileSize>800MB</MaxFileSize>
        </triggeringPolicy>
    </appender>
	<!-- 固定文件生成 -->
    <appender name="WARN"  class="ch.qos.logback.core.FileAppender">
        <File>${LOG_HOME}/${PROJECT_NAME}-warn.log</File>
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%4.10p] [%4.25t] -> %msg &lt;- [%C:%M-%F:%L]%n</pattern>
        </encoder>
    </appender>
    
    <appender name="INFO"  class="ch.qos.logback.core.FileAppender">
        <File>${LOG_HOME}/${PROJECT_NAME}-info.log</File>
        <append>true</append>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>INFO</level>
        </filter>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%4.10p] [%4.25t] -> %msg &lt;- [%C:%M-%F:%L]%n</pattern>
        </encoder>
    </appender>
    
    <!-- 日志输出级别 -->
    <root level="DEBUG">
        <appender-ref ref="DEBUG_DAILY"></appender-ref>
        <appender-ref ref="CONSOLE"></appender-ref>
        <appender-ref ref="WARN"></appender-ref>
        <appender-ref ref="INFO"></appender-ref>
    </root>
</configuration>